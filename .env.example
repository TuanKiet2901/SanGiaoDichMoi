# Cấu hình Flask
FLASK_APP=app
FLASK_ENV=development
SECRET_KEY=your_secret_key_here
DEBUG=True

# Cấu hình Database
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=agri_tracechain

# Cấu hình Blockchain (Ganache)
BLOCKCHAIN_PROVIDER_URL=http://127.0.0.1:7545
BLOCKCHAIN_CHAIN_ID=1337
BLOCKCHAIN_OWNER_PRIVATE_KEY=your_private_key_here

# Cấu hình Upload
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Cấu hình QR Code
QR_CODE_DIR=static/qrcodes
